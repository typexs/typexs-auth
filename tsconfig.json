{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2017"
    ],
    "outDir": "./build/compiled",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "pretty": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "**/files/*.ts",
    "archive",
    "build",
    "dist",
    "node_modules",
    "*/node_modules",
    "tmp"
  ],
  "compileOnSave": true
}
