{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "build/out-tsc/app",
    "target": "es5",
    "types": [
      "node"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "build/app-aot",
    "skipMetadataEmit": false,
    "skipTemplateCodegen": false
  },
  "include": [
    "src/app/**/*.ts",
    "src/modules/**/*.ts",
    "node_modules/*/modules/**/*.ts"
  ],
  "exclude": [
    "src/app/test.ts",
    "src/modules/**/*.spec.ts",
    "src/app/**/*.spec.ts"
  ]
}
